[color]
	ui = auto
[core]
	editor = vim
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	root = !cd $(pwd)
	finish = flow feature finish
	start = flow feature start

[apply]
	whitespace = nowarn
[mergetool]

	keepBackup = false
[format]
        pretty = %w(80,0,4)%C(bold red)%h %Cblue%ad%C(yellow)%d%Creset %s %Cgreen~%an%Creset
[log]
	date = short
