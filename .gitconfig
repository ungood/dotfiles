[user]
	name = Jason Walker
	email = ungood@onetrue.name
[github]
	user = ungood
[color]
	ui = auto
[core]
	editor = vim
	autocrlf = false
	filemode = false
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	call = !git add -A . && git commit
	refgraph = log --graph --all --simplify-by-decoration
	rstatus = remote show origin
[apply]
	whitespace = nowarn
[mergetool]
	keepBackup = false
[format]
	pretty = %w(80,0,4)%C(bold red)%h %Cblue%ad%C(yellow)%d%Creset %s %Cgreen~%an%Creset
[log]
	date = short
[merge]
        tool = p4merge
[diff]
        guitool = p4merge
[mergetool "p4merge"]
	cmd = \"c:/Program Files/Perforce/p4merge.exe\" \"$BASE\" \"$LOCAL\" \"$REMOTE\" \"$MERGED\"
	path = c:/Program Files/Perforce/p4merge.exe
[difftool "p4merge"]
	path = C:/Program Files/Perforce/p4merge.exe
	cmd = \"C:/Program Files/Perforce/p4merge.exe\" \"$LOCAL\" \"$REMOTE\"
[branch]
	autosetuprebase = remote
[push]
	default = tracking
