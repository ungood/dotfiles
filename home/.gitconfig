[user]
	name = Jason Walker
	email = jwwalker@amazon.com
[github]
	user = ungood
[color]
	ui = auto
[color "branch"]
    current = "green ul"
    local = "yellow"
    remote = "red"
    plain = "normal"
[color "decorate"]
    HEAD = "green ul"
    remoteBranch = "red"
    branch = "yellow"
    tag = "cyan"
    stash = "bold cyan"
[format]
#	pretty = %w(80,0,4)%C(bold red)%h %Cblue%ad%C(yellow)%d%Creset %s %Cgreen~%an%Creset
    pretty = %w(80,0,4)%C(bold red)%h %C(bold blue)%ad %C(green)%an%C(yellow)%d%n%Creset%s
[core]
	editor = vim
	excludesfile = /home/jwwalker/.gitignore_global
	pager = less -FMRiX
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	call = !git add -A . && git commit
	refgraph = log --graph --all --simplify-by-decoration
	rstatus = remote show origin
	fixmodes = !git ls-tree -r master . | grep 100755 | cut -f 2 | xargs -d'\\n' chmod -x
	logg = log --graph
	loga = log --all
	logga = log --graph --all
	start = "!f() { git branch --track $1 && git checkout $1; }; f"
	amend = commit -a --amend
	dag = log --graph --all
    cr = tag jw-cr -fm "Jason's last CR head."
[apply]
	whitespace = nowarn
[mergetool]
	keepBackup = false
[log]
	date = short
[merge]
	tool = p4merge
[diff]
        guitool = p4merge
[mergetool "p4merge"]
    	cmd = "p4merge" "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    	keepTemporaries = false
    	trustExitCode = false
    	keepBackup = false
[push]
	default = simple
[branch]
	autosetuprebase = always
[rerere]
	enabled = true
[amazon]
	append-cr-url = false
